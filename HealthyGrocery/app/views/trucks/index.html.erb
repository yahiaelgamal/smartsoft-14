<h1>Listing trucks</h1>

<table>
  <tr>
    <th><%= sortable_column "Driver" %></th>
    <th><%= sortable_column "Capacity" %></th>
    <th><%= sortable_column "Status" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trucks.each do |truck| %>
  <tr>
    <td><%= truck.driver %></td>
    <td><%= truck.capacity %></td>
    <td><%= truck.status %></td>
    <td><%= link_to 'Show', truck %></td>
    <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
    <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

